// README at: https://github.com/devcontainers/templates/tree/main/src/docker-existing-docker-compose
{
  "name": "WeatherPi V2",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "weatherpi",
  "workspaceFolder": "/app",
  "containerEnv": {
    "SIMULATE_SENSORS": "1"
  },
  "postCreateCommand": "pip install --no-cache-dir -r requirements.txt"
}
